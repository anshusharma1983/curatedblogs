    </LinearLayout>-->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4.20">

        <ImageView
            android:id="@+id/image"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:layout_gravity="center_horizontal"
            android:layout_margin="1dp"
            android:src="@drawable/blog"
            android:scaleType="fitXY" />

       <!-- <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#Product management"
            android:background="@drawable/customborder2"
            android:textColor="@color/card_white"
            android:textSize="10dp"
            android:layout_margin="1dp"
            android:layout_gravity="center_vertical"
            android:paddingLeft="4dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:paddingRight="4dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@+id/image"
            android:layout_alignBottom="@+id/image" />-->
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:id="@+id/linearLayout2"
        android:layout_weight="1"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="0dp">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text=""
            android:minLines="1"
            android:textSize="16sp"
            android:textColor="#616161"
            android:layout_gravity="center_vertical" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout6"
        android:layout_weight="4"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/article"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textColor="#616161"
            android:background="@drawable/customborder"
            android:textSize="14sp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingLeft="4dp"
            android:paddingTop="1dp"
            android:paddingRight="4dp"
            android:paddingBottom="1dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:id="@+id/linearLayout4"
        android:layout_weight="0.29"
        android:layout_margin="2dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp">

        <TextView
            android:id="@+id/articleSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CuratedBlogs"
            android:textColor="#616161"
            android:textSize="10dp"
            android:layout_toRightOf="@+id/readMoreButton"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <View
        android:id="@+id/SplitLine_hor1"
        android:layout_width="match_parent"
        android:layout_height= "0dp"
        android:background="#9e9e9e"
        android:layout_weight="0.01"
        android:weightSum="10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center|bottom"
        android:orientation="horizontal"

        android:id="@+id/linearLayout3"
        android:layout_weight="0.5"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:baselineAligned="true">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:layout_gravity="center">

            <Button
                android:id="@+id/readMoreButton"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:color="#FFFFFF"
                android:alpha="1"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_open_in_browser_black_18dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center">

            <Button
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/bookmarkButton"
                android:background="@drawable/ic_bookmark_border_black_18dp"
                android:layout_centerInParent="true"
                android:alpha="1"
                style="?android:attr/buttonStyleSmall" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>

